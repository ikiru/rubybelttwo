<h1 id="hi">Hi <%= current_user.name.titleize %>!</h1>
<div style="float-right">
    <a href="/logout" data-method="delete">Logout</a>
  <a href="/dashboard">Go to all dashboard</a>
</div>

<!-- All Pruducts displayed -->

<div class="container">
  <h3>All products</h3>
  <table class="table">
    <thead>
        <tr>
          <th>Product</th>
          <th>Seller</th>
          <th>Date Posted</th>
          <th>Amount</th>
          <th>Action</th>
        </tr>
    </thead>
    <tbody>
      <% @shoes.each do |shoe| %>
      <tr>
        <td><%= shoe.product %></td>
        <td><%= shoe.seller.name.titleize %> <%= shoe.seller.alias.titleize %></td>
        <td><%= shoe.created_at.strftime("%B %d, %Y") %></td>
        <td>$<%= shoe.price %></td>
        <% unless current_user == shoe.seller %>
        <td><a href="/products/<%= shoe.id %>" data-method='put'>Buy</a></td>
        <% end %>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>
